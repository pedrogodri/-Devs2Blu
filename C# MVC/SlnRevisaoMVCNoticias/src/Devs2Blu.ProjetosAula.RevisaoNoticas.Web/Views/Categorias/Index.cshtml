@model IEnumerable<Devs2Blu.ProjetosAula.RevisaoNoticas.Web.Models.Entities.Categoria>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn3">Adicione uma categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btnEdit btn3">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btnDetails btn3">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btnDelete btn3">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
